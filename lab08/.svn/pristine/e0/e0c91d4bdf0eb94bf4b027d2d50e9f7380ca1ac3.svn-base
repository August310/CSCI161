public class ShakespeareanInsultGenerator {
    
public static String randomInsult(){
    
    Random rand = new Random();
    String [] firstWords = {
        "bawdy", 
        "craven", 
        "dankish", 
        "frothy", 
        "lumpish", 
        "pribbling", 
        "surly", 
        "villainous"};
    
    String [] secondWords = {
        "beef-witted", 
        "clay-brained", 
        "dizzy-eyed", 
        "flap-mouthed", 
        "ill-nutured", 
        "motley-minded", 
        "sheep-biting", 
        "tickle-brained"};
    
    String [] thirdWords ={
        "bugbear", 
        "clotpole", 
        "harpy", 
        "lout", 
        "miscreant", 
        "molwarp", 
        "puttock", 
        "wagtail"};
    
    return firstWords [rand.nextInt(firstWords.length)] + " " + 
           secondWords [rand.nextInt(secondWords.length)] + " " + 
           thirdWords [rand.nextInt(thirdWords.length)];
}











