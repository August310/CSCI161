package TextAdventure;

/**
 *
 * @author August
 */
public class Creature {
private String name;
private String description;
private String defeated;
private Item item;   

    
   
    public Creature(String name, String description, String defeated){
        this.name = name;
        this.description = description;
        this.defeated = defeated;
    }

    public String getName(){
        return name;
    }

    public String getDescription(){
        return description;
    }

    public String getDefeated(){
        return defeated;
    }

    public Item getItemToDestroy(){
        return item;
    }

    public void setItemToDestroy(Item item){
        this.item = item;
    }

    public void setName(String newName){
        name = newName;
    }

    public void setDescription(String newDescription){
        description = newDescription;
    }

    public void setDefeated(String defeated){
        this.defeated = defeated;
    }










}
