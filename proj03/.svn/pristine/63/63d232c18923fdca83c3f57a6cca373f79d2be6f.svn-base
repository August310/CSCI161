package BookStore;

public class Book {
//still changes to be made
    String title;
    String auther;
    double price;
    double min = 57.00;

    public Book() {
        title = "";
        auther = "";
        price = 0.0;
    }

    public Book(String newTitle, String newAuther, double newPrice) {
        title = newTitle;
        auther = newAuther;
        price = newPrice;
    }

    public String getTitle() {
        return title;
    }

    public String getAuther() {
        return auther;
    }

    public double getPrice() {
        return price;
    }
    @Deprecated
    public double getCost() {
        return price;
    }

    public String toString() {
        return ("title: " + title + "\t"
                + "auther: " + auther + "\t"
                + "price: " + price);

    }

}
